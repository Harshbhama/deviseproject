<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Email</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <% abc = post.user_id %>
    <% xyz =User.find(abc) %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user_id %></td>
        <td><%= xyz.email %> </td>
        <td><%= link_to 'Show', post %></td>
        <% if user_signed_in? && current_user.id == post.user_id %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          <td>
        </td>
      </tr>
    <% end %>
 <% if !user_signed_in? %>
         
          <%= link_to 'Sign-in', '/users/sign_in' %>
          <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

